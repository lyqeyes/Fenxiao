@section scripts{
    <script type="text/javascript" src="~/assets/plugins/select2/select2.min.js"></script>
    <script type="text/javascript" src="~/assets/plugins/data-tables/jquery.dataTables.js"></script>
    <script type="text/javascript" src="~/assets/plugins/data-tables/DT_bootstrap.js"></script>
    <script type="text/javascript" charset="utf-8">
        var tbl;
        $(document).ready(function () {
            tbl = $('#DataTable').dataTable({
                "oLanguage": {//语言国际化
                    //"sUrl": "/Scripts/Plug-in/jquery.dataTable.cn.txt"
                    "sProcessing": '<i class="fa fa-coffee"></i>&nbsp;请稍后...',
                },
                "bJQueryUI": false,
                "sPaginationType": "bootstrap",
                'bPaginate': true,  //是否分页。
                "bProcessing": true, //当datatable获取数据时候是否显示正在处理提示信息。
                "bServerSide": false,
                "sAjaxSource": "/Admin/ALine/GetAllLines",
                "iDisplayLength": 10,
                "aoColumns": [
                                { "sTitle": "线路ID", "sClass": "center" },
                                { 
                                    "sTitle": "线路标题", 
                                    "sClass": "center",
                                    "fnRender": function (obj) {
                                        return '<a href="/admin/ALine/LineDetail/' + obj.aData[0] + '">' + obj.aData[1] + '</a>'
                                    }
                                },
                                {
                                    "sTitle": "操作",
                                    "sClass": "center",
                                    "fnRender": function (obj) {
                                        var result = '<a href="/admin/ALine/LineDetail/ ' + obj.aData[0] + '"class="btn default btn-xs purple"><i class="fa fa-edit"></i> 线路详情</a> ' + 
                                        '<a href="/admin/ALine/LineSaleSituation?productId=' + obj.aData[0] +' " class="btn default btn-xs purple"><i class="fa fa-edit"></i>订单列表</a> '+
                                        '<a href="/admin/ALine/LineReturnOrder?productId='+obj.aData[0]+ '" class="btn default btn-xs purple"><i class="fa fa-edit"></i>退单列表</a> ';
                                        if (obj.aData[2] == 1)
                                            result = result + '<a href="/Admin/ALine/LineChangeState/' + obj.aData[0] + '" class="btn default btn-xs purple"><i class="fa fa-edit"></i> 禁用</a>';
                                        else if (obj.aData[2] == 2)
                                            result = result + '<button disabled class="btn default btn-xs grey"><i class="fa fa-edit"></i> 已售出 无法禁用</button>';
                                        else
                                            result = result + '<a href="/Admin/ALine/LineChangeState/' + obj.aData[0] + '" class="btn default btn-xs green"><i class="fa fa-edit"></i> 恢复</a>';

                                        return result;
                                    }
                                }
                ],
            });
            function RefreshTable(tableId, urlData) {
                $.getJSON(urlData, null, function (json) {
                    table = $(tableId).dataTable();
                    oSettings = table.fnSettings();
                    table.fnClearTable(this);
                    for (var i = 0; i < json.aaData.length; i++) {
                        table.oApi._fnAddData(oSettings, json.aaData[i]);
                    }
                    oSettings.aiDisplay = oSettings.aiDisplayMaster.slice();
                    table.fnDraw();
                });
            }
        });
    </script>
}
