<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link type="text/css" rel="stylesheet" href="/css/base.css">
    <link type="text/css" rel="stylesheet" href="/css/common.css">
    <link type="text/css" rel="stylesheet" href="/css/saler.css">
    @RenderSection("styles", required: false)
    <title>批发商-编辑子账户</title>
</head>

<body class="saler common">
    <div class="header">
        <div class="logo">
            <img src="/images/index_logo.png" />
        </div>
        <div class="pcenter">
            <a class="c_message_top" onclick="C_ShowMessageBox();">
                <i class="i-user-bell"></i><span class="c_message">消息(@FenXiao.Web.Common.Message.GetWholesalerCount())</span>
            </a>
            <a class="c_user_name_top" onclick="C_ShowUserBox();">
                <span class="c_user_name">@FenXiao.Web.Common.FenXiaoUserContext.Current.UserInfo.Name</span><i class="i-user-arrow-down"></i>
            </a>
            <div class="c_message_box" id="c_message_box">
                <i class="i-arrow-top"></i>
                <div class="up">
                    <p>您当前有@(FenXiao.Web.Common.Message.GetWholesalerCount())条未读消息。</p>
                </div>
                <div class="down">
                    <span class="btn_sub"><a href="/Wholesaler/WMessage/Index"> 查看消息</a></span>
                </div>
            </div>
            <div class="c_user" id="c_user">
                <i class="i-arrow-top"></i>
                <ul>
                    <li><a href="/Wholesaler/WAuth/EditEmail">修改名称</a></li>
                    <li><a href="/Wholesaler/WAuth/EditInfo">重置密码</a></li>
                    <li><a href="/Wholesaler/WAuth/Logout"><i class="i-quit"></i>注销</a></li>
                </ul>
            </div>  
        </div>
    </div>
    <div class="left">
        <!--60px占高层-->
        <div class="h60"></div>
        <ul class="nav" id="Menu">
            <li><a href="/Wholesaler/WHome/CreateLuXian"><i class="i-flag"></i>发布线路</a></li>
            <li><p><a href="/Wholesaler/WHome/MyLuXian"><i class="i-control"></i>我的线路</a></p></li>
            @*<li><a><i class="i-bell"></i>微信营销</a></li>*@
            <li class="active"><a href="/Wholesaler/WHome/Member"><i class="i-manger"></i>公司管理</a></li>
            <li><a href="#"><i class="i-bell"></i>订单管理</a></li>
            <li><a href="/Wholesaler/WWeChat/Index"><i class="i-bell"></i>微信营销列表</a></li>
            <li><a href="/Wholesaler/WWeChat/Management"><i class="i-bell"></i>微信营销管理</a></li>
        </ul>
    </div>
    <div class="right">
        @RenderBody()
    </div>
    <!--清除浮动-->
    <div class="clear"></div>
    <script type="text/javascript" src="/js/jquery.min.js"></script>
    <script type="text/javascript" src="/js/saler.js"></script>
    <script type="text/javascript">
        window.onload = init();
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
