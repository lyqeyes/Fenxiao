@model OrderForm
@section title{
    <title>零售商-订单管理-占位订单详情</title>
}
<div class="h60"></div>
<div class="part">
    <p class="position">◆当前位置：订单管理>>占位订单详情</p>
    <!--订单信息板块-->
    <div class="line_order_details">
        <div class="single_tab"><p>当前订单信息</p></div>
        <div class="line_order_body">
            <p class="single">
                订单号：　<span>@Model.Id</span>　　　下单时间：<span>@Model.CreateTime.ToString("yyyy年MM月dd日，HH点mm分")</span>
            </p>        
            <p class="single">下单人员：<span>@Model.User.Company.CompanyName  @Model.User.Name</span>
            <p class="single">下单联系方式：<br /><span class="ml100">@Model.User.Name　　电话：@Model.User.Phone</span></p>
            <hr>
            <p class="single">所属线路：<a class="f-lightblue" href="~/Marketer/MSearch/LineDetail?Id=@Model.ProductId">@Model.Product.Name</a></p>
            <p class="single">批发商联系方式：<br /><span class="ml100">@Model.Company.CompanyName　　电话：@Model.Company.CompanyPhone</span></p>
            @if (Model.State == (int)EnumOrderForm.chulidingdan)
            {
                foreach (var item in Model.HandleOrderForms)
                {
                    <p class="single">处理订单人员信息：<br /><span class="ml100">@item.User.Name　　电话：@item.User.Phone</span><span>处理时间:@item.CreateTime</span></p>
                }
            }
            <hr>
            <p class="single">
                具体采购信息：<br />
                <table class="center table_withline">
                    <thead>
                        <tr>
                            <th>序号</th>
                            <th>商品种类</th>
                            <th>采购数量</th>
                            <th>采购价格</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>#1</td>
                            <td>成人票</td>
                            <td>@(Model.ChengRenCount)份</td>
                            <td>￥@Model.ChengRenPrice</td>
                        </tr>
                        <tr>
                            <td>#2</td>
                            <td>儿童票</td>
                            <td>@(Model.ErTongCount)份</td>
                            <td>￥@Model.ErTongPrice</td>
                        </tr>
                    </tbody>
                </table>
            </p>
            <div style="text-align:center;">
                <a class="single_btn" href="~/Marketer/MSearch/ReserveNow?ProductId="><span class="btn_sub" style="margin:7px">填写信息</span></a>
                <a class="single_btn" onclick="history.back();"><span class="btn_sub" style="margin:0px">返回</span></a>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        LeftMenuSelect(2);
    </script>
}