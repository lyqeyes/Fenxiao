          var name = $(this).parent().parent().find('input[name="Name"]').val();
          var temp = this;
          if (!confirm("确认清空名为"+name+"的信息？")) {
              return;
          }
          @*发送Ajax请求*@
            $.ajax(
                     {
                         url: "/Marketer/MLine/DelPeopleAjax",
