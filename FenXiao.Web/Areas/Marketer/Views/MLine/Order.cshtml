                         },
                         success: function (data) {
                             if (data.Ok == "200") {
                                 alert("清空成功！");
                                 window.location.reload();
                             }
                             else if (data.Ok == "100") {
                                 alert("不存在该成员信息，请刷新后重试！");
                             }
                             else if (data.Ok == "50") {
                                 alert("该成员信息已被锁定，无法清空！");
                             }
                             else {
                                 alert("未知原因出错！");                                
                             }
                         },
                         error: function () {
                             alert("好像出错了，请检查网络连接！");
                         }
                     })
      });
    </script>
