@using FenXiao.Model
@model List<CustomerInfo>
<table class="table" id="LineMember">
    <tbody class="fs08 tcenter">
        <tr>
            <td>
                <div class="member_blank">
                    @if (Model == null)
                    {
                        for (int i = 0; i < ViewBag.ZhanWeiCount; i++)
                        {
                            <div class="member_item" style="height:30px;">
                                <div class="member_item_head">
                                    <span class="member_item_head_fold">打开本条</span>
                                    <span class="member_item_head_id" hidden="hidden">-1</span>
                                    <span class="member_item_head_save">保存修改</span>
                                    <span style="margin-left: 10px;float: left;">#成员序号：@(i + 1) (共@(ViewBag.ZhanWeiCount)位成员)</span>
                                </div>
                                <div class="member_item_body" hidden="hidden">
                                    <p>
                                        成员类型：<select name="Type">
                                            <option value="0">成人</option>
                                            <option value="1">儿童</option>
                                        </select>
                                        姓名：<input type="text" name="Name">
                                        姓(拼音)：<input type="text" style="max-width:60px;" name="PinYinXing">
                                        名(拼音)：<input type="text" name="PinYinMing">
                                        分房（选填）：<input type="text" style="max-width:90px;" name="FenFang">
                                    </p>
                                    <p>
                                        性别：<select name="Sex">
                                            <option value="0">男</option>
                                            <option value="1">女</option>
                                        </select>
                                        生日：<input type="text" name="Birthday">
                                        出生地：<input type="text" name="Birthplace">
                                        电话（选填）：<input type="text" name="Phone">
                                        备注（选填）：<input type="text" style="max-width:90px;" name="Note">
                                    </p>
                                    <p>
                                        证照类型：<select name="ZhengZhaoType">
                                            <option value="0">身份证</option>
                                            <option value="1">护照</option>
                                            <option value="2">军人证</option>
                                            <option value="3">赴台证</option>
                                            <option value="4">港澳证</option>
                                        </select>
                                        证照号：<input type="text" name="ZhengZhaoNumber">
                                        签发地：<input type="text" name="QianFaPlace">
                                        签发时间：<input type="text" name="QianFaTime">
                                        到期时间：<input type="text" name="DaoQiTime">
                                    </p>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        for (int i = 0; i < Model.Count; i++)
                        {
                            <div class="member_item" style="height:30px;">
                                <div class="member_item_head">
                                    <span class="member_item_head_fold">打开本条</span>
                                    <span class="member_item_head_del">删除本条</span>
                                    <span class="member_item_head_id" hidden="hidden">@Model[i].Id</span>
                                    <span class="member_item_head_save">保存修改</span>
                                    <span style="margin-left: 10px;float: left;">#成员序号：@(i + 1) (共@(ViewBag.Count+Model.Count)位成员)</span>
                                </div>
                                <div class="member_item_body" hidden="hidden">
                                    <p>
                                        成员类型：<select name="Type">
                                            @if (Model[i].Type == 0)
                                            {
                                                <option value="0" selected="selected">成人</option>
                                                <option value="1">儿童</option>
                                            }
                                            else
                                            {
                                                <option value="0">成人</option>
                                                <option value="1" selected="selected">儿童</option>
                                            }
                                        </select>
                                        姓名：<input type="text" name="Name" value="@Model[i].Name">
                                        姓(拼音)：<input type="text" style="max-width:60px;" name="PinYinXing" value="@Model[i].PinYinXing">
                                        名(拼音)：<input type="text" name="PinYinMing" value="@Model[i].PinYinMing">
                                        分房（选填）：<input type="text" style="max-width:90px;" name="FenFang" value="@Model[i].FenFang">
                                    </p>
                                    <p>
                                        性别：<select name="Sex">
                                            @if (Model[i].Sex == 0)
                                            {
                                                <option value="0" selected="selected">男</option>
                                                <option value="1">女</option>
                                            }
                                            else
                                            {
                                                <option value="0">男</option>
                                                <option value="1" selected="selected">女</option>
                                            }
                                        </select>
                                        生日：<input type="text" name="Birthday" value="@Model[i].Birthday">
                                        出生地：<input type="text" name="Birthplace" value="@Model[i].Birthplace">
                                        电话（选填）：<input type="text" name="Phone" value="@Model[i].Phone">
                                        备注（选填）：<input type="text" style="max-width:90px;" name="Note" value="@Model[i].Note">
                                    </p>
                                    <p>
                                        证照类型：<select name="ZhengZhaoType">
                                            @if (Model[i].ZhengZhaoType == 0)
                                            {
                                                <option value="0" selected="selected">身份证</option>
                                                <option value="1">护照</option>
                                                <option value="2">军人证</option>
                                                <option value="3">赴台证</option>
                                                <option value="4">港澳证</option>
                                            }
                                            else if (Model[i].ZhengZhaoType == 1)
                                            {
                                                <option value="0">身份证</option>
                                                <option value="1" selected="selected">护照</option>
                                                <option value="2">军人证</option>
                                                <option value="3">赴台证</option>
                                                <option value="4">港澳证</option>
                                            }
                                            else if (Model[i].ZhengZhaoType == 2)
                                            {
                                                <option value="0">身份证</option>
                                                <option value="1">护照</option>
                                                <option value="2" selected="selected">军人证</option>
                                                <option value="3">赴台证</option>
                                                <option value="4">港澳证</option>
                                            }
                                            else if (Model[i].ZhengZhaoType == 3)
                                            {
                                                <option value="0">身份证</option>
                                                <option value="1">护照</option>
                                                <option value="2">军人证</option>
                                                <option value="3" selected="selected">赴台证</option>
                                                <option value="4">港澳证</option>
                                            }
                                            else
                                            {
                                                <option value="0">身份证</option>
                                                <option value="1">护照</option>
                                                <option value="2">军人证</option>
                                                <option value="3">赴台证</option>
                                                <option value="4" selected="selected">港澳证</option>
                                            }
                                        </select>
                                        证照号：<input type="text" name="ZhengZhaoNumber" value="@Model[i].ZhengZhaoNumber">
                                        签发地：<input type="text" name="QianFaPlace" value="@Model[i].QianFaPlace">
                                        签发时间：<input type="text" name="QianFaTime" value="@Model[i].QiangFaTime">
                                        到期时间：<input type="text" name="DaoQiTime" value="@Model[i].DaoQiTime">
                                    </p>
                                </div>
                            </div>
                        }
                        for (int i = 0; i < ViewBag.ZhanWeiCount; i++)
                        {
                            <div class="member_item" style="height:30px;">
                                <div class="member_item_head">
                                    <span class="member_item_head_fold">打开本条</span>
                                    <span class="member_item_head_id" hidden="hidden">-1</span>
                                    <span class="member_item_head_save">保存修改</span>
                                    <span style="margin-left: 10px;float: left;">#成员序号：@(i + Model.Count + 1) (共@(ViewBag.ZhanWeiCount + Model.Count)位成员)</span>
                                </div>
                                <div class="member_item_body" hidden="hidden">
                                    <p>
                                        成员类型：<select name="Type">
                                            <option value="0">成人</option>
                                            <option value="1">儿童</option>
                                        </select>
                                        姓名：<input type="text" name="Name">
                                        姓(拼音)：<input type="text" style="max-width:60px;" name="PinYinXing">
                                        名(拼音)：<input type="text" name="PinYinMing">
                                        分房（选填）：<input type="text" style="max-width:90px;" name="FenFang">
                                    </p>
                                    <p>
                                        性别：<select name="Sex">
                                            <option value="0">男</option>
                                            <option value="1">女</option>
                                        </select>
                                        生日：<input type="text" name="Birthday">
                                        出生地：<input type="text" name="Birthplace">
                                        电话（选填）：<input type="text" name="Phone">
                                        备注（选填）：<input type="text" style="max-width:90px;" name="Note">
                                    </p>
                                    <p>
                                        证照类型：<select name="ZhengZhaoType">
                                            <option value="0">身份证</option>
                                            <option value="1">护照</option>
                                            <option value="2">军人证</option>
                                            <option value="3">赴台证</option>
                                            <option value="4">港澳证</option>
                                        </select>
                                        证照号：<input type="text" name="ZhengZhaoNumber">
                                        签发地：<input type="text" name="QianFaPlace">
                                        签发时间：<input type="text" name="QianFaTime">
                                        到期时间：<input type="text" name="DaoQiTime">
                                    </p>
                                </div>
                            </div>
                        }
                        <a href="~/Marketer/MLine/Report?Id=@ViewBag.Id"><span class="btn_sub" style="margin-top: 10px;">导出报表</span></a>
                    }
                </div>
            </td>
        </tr>
    </tbody>
</table>