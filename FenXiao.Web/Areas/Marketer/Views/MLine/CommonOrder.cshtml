@using FenXiao.Model
@model List<OrderForm>
<table class="table" id="LineOrder">
    <thead>
        <tr>
            <th>#序号</th>
            <th>线路名称</th>
            <th>线路发团日期</th>
            <th>价格</th>
            <th>订货数量</th>
            <th>下单时间</th>
            <th>订单类型</th>
            <th>订单详情</th>
        </tr>
    </thead>
    <tbody class="fs08 tcenter">
        @for(int i=0;i<Model.Count;i++)
        { 
        <tr>
            <td>@(i+1)</td>
            <td>@Model[i].Product.Name</td>
            <td>@Model[i].Product.SendGroupTime.ToString("yyyy年MM月dd日")</td>
            <td>成人：￥@Model[i].Product.ChengRenPrice<br/>儿童：￥@Model[i].Product.ErTongPrice</td>          
            <td>数量：@Model[i].AllCount</td>
            <td>@Model[i].CreateTime</td>
            @if(Model[i].State == (int)EnumOrderForm.ReserveNowOrder)
            {
                <td>占位订单</td>
            }
            else if (Model[i].State == (int)EnumOrderForm.DirectApplyOrderEditing)
            {
                <td>直接订单<br/>(正在编辑)</td>
            }
            else
            {
                <td>直接订单</td>
            }
            <td><a href="~/Marketer/MLine/CommonOrderDetail?Id=@Model[i].Id"><span class="btn_sub">查看详情</span></a></td>
        </tr>
        }
    </tbody>
</table>